  <style>
    html, body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      font-family: 'Zalando Sans Expanded', sans-serif;
      color: #eee;
      overflow-x: hidden;
      background: #000001;
      background-image:
        repeating-linear-gradient(to right, rgba(148, 149, 156, 0.3) 0 3px, transparent 3px 78px),
        repeating-linear-gradient(to bottom, rgba(148, 149, 156, 0.3) 0 3px, transparent 3px 78px),
        linear-gradient(135deg, #1a1a1a 0%, #000001 100%);
      background-size: 78px 78px;
      animation: moveGrid 15s linear infinite;
      box-sizing: border-box;
    }
    @keyframes moveGrid {
      0% { background-position: 0 0, 0 0, 0 0; }
      100% { background-position: 78px 78px, 78px 78px, 0 0; }
    }
    body::before {
      content: "";
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.7);
      backdrop-filter: blur(10px);
      z-index: -1;
    }
    #root {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    header {
      background: rgba(0,0,0,0.8);
      position: fixed;
      top: 0; left: 0; right: 0;
      z-index: 50;
      border-bottom: 1px solid #ff3b3b;
      border-radius: 0 0 20px 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 1rem;
      height: 64px;
      width: 100%;
    }
    header img.logo {
      height: 40px;
      user-select: none;
      pointer-events: none;
    }
    .desktop-nav a, .desktop-nav button {
      font-size: 1.08rem;
      font-weight: 600;
      color: #eee;
      background: none;
      border: none;
      cursor: pointer;
      transition: color 0.3s;
      outline: none;
    }
    .desktop-nav a:hover, .desktop-nav button:hover {
      color: #ff3b3b;
    }
    .desktop-nav .group:hover ul {
      display: block;
    }
    .desktop-nav ul {
      display: none;
      position: absolute;
      top: 2rem;
      left: 0;
      background: rgba(0,0,0,0.95);
      border-radius: 12px;
      min-width: 180px;
      padding: 0.5rem 1rem;
      box-shadow: 0 2px 12px rgba(255,59,59,0.13);
      z-index: 100;
    }
    .desktop-nav ul li { margin: 0.5rem 0; }
    .desktop-nav ul a { color: #eee; font-size: 1rem; }
    .desktop-nav ul a:hover { color: #ff3b3b; }
    #menu-toggle {
      font-size: 1.8rem;
      color: #ff3b3b;
      background: none;
      border: none;
      cursor: pointer;
      user-select: none;
      transition: transform 0.3s ease;
      z-index: 1101;
      display: flex;
      align-items: center;
    }
    #sidebar {
      position: fixed;
      top: 64px;
      left: 0;
      width: 280px;
      height: calc(100vh - 64px);
      background: rgba(0,0,0,0.85);
      backdrop-filter: blur(20px);
      border-right: 1px solid rgba(255,59,59,0.09);
      box-shadow: 2px 0 16px rgba(255,59,59,0.09);
      padding: 2rem 1.5rem;
      z-index: 40;
      transform: translateX(-100%);
      transition: transform 0.3s ease;
      overflow-y: auto;
    }
    #sidebar.translate-x-0 {
      transform: translateX(0);
    }
    #sidebar ul { padding: 0; margin: 0; list-style: none;}
    #sidebar li + li { margin-top: 1.25rem;}
    #sidebar a, #sidebar button {
      font-size: 1.125rem;
      font-weight: 600;
      color: #eee;
      text-decoration: none;
      display: block;
      padding: 0.75rem 0;
      background: none;
      border: none;
      width: 100%;
      text-align: left;
      cursor: pointer;
      transition: color 0.3s ease;
    }
    #sidebar a:hover, #sidebar button:hover {
      color: #ff3b3b;
    }
    #social-links { margin-top: 0.5rem; padding-left: 1rem;}
    #social-links a {
      font-size: 1rem;
      color: #ccc;
      margin-bottom: 0.5rem;
      transition: color 0.3s ease;
    }
    #social-links a:hover { color: #ff3b3b; }
    #socials-toggle i { transition: transform 0.3s ease;}
    #socials-toggle.open i { transform: rotate(180deg); }
    main {
      flex: 1 0 auto;
      margin-top: 64px;
      margin-left: 0;
      padding: 1.5rem 1rem 4rem 1rem;
      max-width: 100%;
      user-select: none;
      transition: margin-left 0.3s ease;
    }
    @media(min-width: 1024px) {
      #sidebar { display: none !important; }
      main { margin-left: 0; max-width: 100%; padding: 2rem;}
      #menu-toggle { display: none;}
      .desktop-nav { display: flex !important; }
    }
    .hero {
      position: relative;
      background: rgba(255,255,255,0.07);
      backdrop-filter: blur(25px);
      border-radius: 25px;
      box-shadow: 0 0 20px 2px rgba(255,59,59,0.13);
      margin-bottom: 3rem;
      text-align: center;
      padding: 2.5rem 2rem 2.5rem 2rem;
      color: #ff3b3b;
      user-select: text;
    }
    .hero > div {
      background: rgba(0,0,0,0.34);
      padding: 1.2rem 2rem;
      border-radius: 20px;
      box-shadow: 0 0 8px 1px rgba(255,59,59,0.11);
      margin: 0 auto;
      max-width: 720px;
    }
    .hero h1 {
      font-weight: 900;
      font-size: 1rem;
      letter-spacing: 0.12em;
      margin-bottom: 1rem;
      text-shadow: 0 1px 5px rgba(255,59,59,0.18);
    }
    .hero p {
      font-size: 1.1rem;
      color: #eee;
      margin-bottom: 0.5rem;
    }
    .hero a {
      background: rgba(255,59,59,0.11);
      color: white;
      font-weight: 700;
      font-size: 1.08rem;
      padding: 0.75rem 2.2rem;
      border-radius: 9999px;
      border: 2px solid #ff3b3b;
      box-shadow: 0 0 12px 1px rgba(255,59,59,0.13);
      text-decoration: none;
      display: inline-block;
      transition: background 0.3s, box-shadow 0.3s;
      user-select: none;
      user-drag: none;
    }
    .hero a:hover {
      background-color: #ff3b3b;
      box-shadow: 0 0 20px rgba(255,59,59,0.19);
    }
    #tournaments-container {
      display: flex;
      gap: 1rem;
      overflow-x: auto;
      padding-bottom: 1rem;
      scroll-padding-left: 1rem;
      user-select: none;
    }
    .tournament-card {
      min-width: 250px;
      background: rgba(255,255,255,0.08);
      backdrop-filter: blur(15px);
      border-radius: 20px;
      border: 1px solid rgba(255,59,59,0.13);
      box-shadow: 0 2px 8px rgba(255,59,59,0.13);
      padding: 1.5rem;
      color: #eee;
      cursor: pointer;
      transition: box-shadow 0.3s, transform 0.3s, border-color 0.3s;
      display: flex;
      flex-direction: column;
    }
    .tournament-card:hover,
    .tournament-card:focus-visible {
      outline: none;
      transform: translateY(-4px);
      box-shadow: 0 6px 16px rgba(255,59,59,0.17);
      border-color: #ff3b3b;
    }
    .tournament-card h3 {
      margin: 0 0 1rem 0;
      font-weight: 900;
      font-size: 1.22rem;
      user-select: text;
      color: #ff3b3b;
      text-shadow: 0 1px 5px rgba(255,59,59,0.18);
    }
    .tournament-card p {
      font-size: 0.97rem;
      color: #ddd;
      user-select: text;
      flex-grow: 1;
    }
    .supported-games {
      margin-top: 2rem;
      margin-bottom: 3rem;
      max-width: 100%;
      overflow-x: auto;
      display: flex;
      gap: 1rem;
      user-select: none;
    }
    .supported-games img {
      flex-shrink: 0;
      width: 92px;
      height: 92px;
      object-fit: contain;
      border-radius: 14px;
      background: rgba(0,0,0,0.25);
      border: 1px solid rgba(255,59,59,0.13);
      box-shadow: 0 1px 6px rgba(255,59,59,0.13);
      transition: box-shadow 0.3s;
      cursor: pointer;
    }
    .supported-games img:hover {
      box-shadow: 0 2px 14px rgba(255,59,59,0.17);
    }
    #videos-container {
      margin-bottom: 3rem;
      display: grid;
      grid-template-columns: repeat(auto-fill,minmax(250px,1fr));
      gap: 1rem;
      user-select: none;
    }
    #videos-container > div {
      background: rgba(0,0,0,0.21);
      border-radius: 16px;
      min-height: 160px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #999;
      font-style: italic;
      box-shadow: 0 1px 7px rgba(255,59,59,0.13);
      transition: box-shadow 0.3s;
    }
    #videos-container > div:hover {
      box-shadow: 0 2px 11px rgba(255,59,59,0.17);
    }
    footer {
      flex-shrink: 0;
      text-align: center;
      padding: 2rem 1rem 1rem 1rem;
      color: #ccc;
      letter-spacing: 0.08em;
      user-select: none;
      font-size: 0.9rem;
      background: rgba(0, 0, 0, 0.19);
      border-top: 1px solid rgba(255, 59, 59, 0.08);
      width: 100%;
      margin-top: auto;
      box-sizing: border-box;
    }
    footer a {
      color: #ff3b3b;
      text-decoration: none;
      font-weight: 700;
      margin: 0 0.7rem;
      transition: color 0.3s;
      user-select: text;
    }
    footer a:hover { color: #fff; }
  </style>
</head>
<body>
<div id="root">
  <!-- Modern Navbar -->
  <header>
    <div class="flex items-center space-x-3">
      <img src="assets/navbar/logo.png" alt="Esportive Logo" class="logo h-10 select-none pointer-events-none" />
      <span class="text-lg font-bold text-red-600 tracking-wide">Esportive</span>
    </div>
    <nav class="desktop-nav hidden lg:flex items-center space-x-6 font-semibold text-gray-200 relative">
      <a href="mailto:support@espotive.in" class="hover:text-red-400 transition">Contact Us</a>
      <a href="mailto:work@espotive.in" class="hover:text-red-400 transition">Work With Us</a>
      <div class="group relative">
        <button class="hover:text-red-400 transition focus:outline-none">Our Socials <i class="fas fa-chevron-down"></i></button>
        <ul class="absolute bg-black bg-opacity-90 rounded-lg mt-2 py-2 px-4 space-y-2 shadow-lg">
          <li><a href="#" class="hover:text-red-400">Instagram</a></li>
          <li><a href="#" class="hover:text-red-400">Discord</a></li>
          <li><a href="#" class="hover:text-red-400">YouTube</a></li>
          <li><a href="#" class="hover:text-red-400">X</a></li>
          <li><a href="#" class="hover:text-red-400">WhatsApp Channel</a></li>
        </ul>
      </div>
    </nav>
    <!-- Mobile Hamburger Menu -->
    <button id="menu-toggle" aria-label="Toggle Menu" class="lg:hidden text-2xl text-red-600 focus:outline-none">
      <i id="menu-icon" class="fas fa-bars"></i>
    </button>
  </header>
  <!-- Mobile Sidebar -->
  <nav id="sidebar" aria-label="Sidebar Navigation" role="navigation" tabindex="-1">
    <ul>
      <li><a href="mailto:support@espotive.in">Contact Us</a></li>
      <li><a href="mailto:work@espotive.in">Work With Us</a></li>
      <li>
        <button id="socials-toggle" aria-expanded="false" aria-controls="social-links">
          Our Socials <i class="fas fa-chevron-down"></i>
        </button>
        <ul id="social-links" hidden>
          <li><a href="#">Instagram</a></li>
          <li><a href="#">Discord</a></li>
          <li><a href="#">YouTube</a></li>
          <li><a href="#">X</a></li>
          <li><a href="#">WhatsApp Channel</a></li>
        </ul>
      </li>
    </ul>
  </nav>
  <main>
    <section class="hero" aria-label="Hero Section">
      <div>
        <div class="flex items-center space-x-2 justify-center mb-4">
          <div class="w-2 h-8 bg-red-600 rounded"></div>
          <h1>Find Tournaments.</h1>
        </div>
        <p>Esportive is India's e-sports tournament finder. Simply browse, choose, and register externally.</p>
        <a href="login.html" class="btn-glass" aria-label="Sign in to browse">Sign in To Browse</a>
      </div>
    </section>
    <section aria-label="Featured Tournaments">
      <h2 class="mb-6 text-2xl text-red-600 font-bold border-l-4 border-red-600 pl-3">Featured Tournaments</h2>
      <div id="tournaments-container" role="list" tabindex="0" aria-live="polite" class="tournaments">
        <article role="listitem" tabindex="0" class="tournament-card">
          <h3>Red Zone Showdown</h3>
          <p>Join the ultimate BGMI tournament with $10,000 prize pool! Open to all players.</p>
        </article>
        <article role="listitem" tabindex="0" class="tournament-card">
          <h3>Victory Royale Clash</h3>
          <p>Team up and battle for glory in this exciting BGMI squad tournament.</p>
        </article>
        <article role="listitem" tabindex="0" class="tournament-card">
          <h3>Esportive Invitational</h3>
          <p>Exclusive invitational featuring top streamers and pros. Watch the action live!</p>
        </article>
      </div>
    </section>
    <section aria-label="Supported Games">
      <h2 class="mb-6 text-2xl text-red-600 font-bold border-l-4 border-red-600 pl-3">Supported Games</h2>
      <div class="supported-games" role="list">
        <img src="assets/games/bgmi.png" alt="BGMI" role="listitem" />
        <img src="assets/games/codm.png" alt="CODM" role="listitem" />
        <img src="assets/games/freefire.png" alt="Free Fire" role="listitem" />
        <img src="assets/games/coc.png" alt="Clash of Clans" role="listitem" />
        <img src="assets/games/brawl_stars.png" alt="Brawl Stars" role="listitem" />
        <img src="assets/games/pokemon_unite.png" alt="Pokemon Unite" role="listitem" />
        <img src="assets/games/clash_royale.png" alt="Clash Royale" role="listitem" />
      </div>
    </section>
    <section aria-label="Esportive Feed">
      <h2 class="mb-6 text-2xl text-red-600 font-bold border-l-4 border-red-600 pl-3">Esportive Feed</h2>
      <div id="videos-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>Loading latest videos...</div>
      </div>
    </section>
  </main>
  <footer>
    <hr class="border-gray-700 mx-auto w-full my-4" />
    <div class="flex flex-wrap justify-center space-x-4 mb-2 text-xs">
      <a href="pages/privacy-policy.html" class="hover:text-white">Privacy Policy</a>
      <a href="pages/terms-of-use.html" class="hover:text-white">Terms Of Use</a>
      <a href="pages/cookie-policy.html" class="hover:text-white">Cookie Policy</a>
      <a href="pages/faq.html" class="hover:text-white">FAQ</a>
    </div>
    <div class="flex justify-center space-x-6 text-xl mb-2">
      <a href="https://www.instagram.com" class="hover:text-white"><i class="fab fa-instagram"></i></a>
      <a href="https://www.discord.com" class="hover:text-white"><i class="fab fa-discord"></i></a>
      <a href="https://www.youtube.com" class="hover:text-white"><i class="fab fa-youtube"></i></a>
      <a href="https://www.x.com" class="hover:text-white"><i class="fab fa-x"></i></a>
    </div>
    <p class="text-xs">&copy; 2025 Esportive. All rights reserved.</p>
    <div class="flex justify-center items-center py-4 space-x-4">
      <img src="assets/navbar/logo.png" alt="Esportive Logo" class="h-6" />
      <span class="text-gray-500 font-bold text-sm">PART OF</span>
      <img src="assets/footer/flm.png" alt="FLM Logo" class="h-6" />
    </div>
  </footer>
</div>
<script>
  const menuToggle = document.getElementById('menu-toggle');
  const sidebar = document.getElementById('sidebar');
  const socialsToggle = document.getElementById('socials-toggle');
  const socialLinks = document.getElementById('social-links');
  const menuIcon = document.getElementById('menu-icon');

  menuToggle.addEventListener('click', () => {
    sidebar.classList.toggle('translate-x-0');
    sidebar.classList.toggle('-translate-x-full');
    menuIcon.classList.toggle('fa-bars');
    menuIcon.classList.toggle('fa-times');
  });

  socialsToggle.addEventListener('click', () => {
    const expanded = socialsToggle.getAttribute('aria-expanded') === 'true' || false;
    socialsToggle.setAttribute('aria-expanded', String(!expanded));
    socialLinks.hidden = !socialLinks.hidden;
    socialsToggle.classList.toggle('open');
  });

  // Close sidebar on clicking a link for better UX on mobile
  sidebar.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      sidebar.classList.remove('translate-x-0');
      sidebar.classList.add('-translate-x-full');
      menuIcon.classList.add('fa-bars');
      menuIcon.classList.remove('fa-times');
    });
  });

  // Close sidebar on clicking outside
  document.addEventListener('click', (e) => {
    if (!sidebar.contains(e.target) && !menuToggle.contains(e.target) && sidebar.classList.contains('translate-x-0')) {
      sidebar.classList.remove('translate-x-0');
      sidebar.classList.add('-translate-x-full');
      menuIcon.classList.add('fa-bars');
      menuIcon.classList.remove('fa-times');
    }
  });
</script>
</body>
